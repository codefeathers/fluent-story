{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noErrorTruncation": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "react"
	},
	"include": ["./src", "./src/**/*.ts"],
	"exclude": ["node_modules"]
}
